<article class="max-w-3xl mx-auto px-4 py-10">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <h1 class="text-3xl md:text-5xl font-bold tracking-tight text-gray-900 mb-4">
          {{ article.title }}
        </h1>

      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <small class="block text-sm text-gray-500 mb-1"> By {{ article.author }} </small>
        {% endif %}

      {% when 'article_published_date' %}
        {% if section.settings.enable_published_date %}
          <time
            datetime="{{ article.published_at | date: format: 'on_date' }}"
            class="block text-sm text-gray-400 mb-6"
          >
            {{ article.published_at | date: '%B %d, %Y' }}
          </time>
        {% endif %}

      {% when 'featured_image' %}
        {% if article.image %}
          <div class="my-8">
            <img
              src="{{ article.image | image_url: width: 1200 }}"
              alt="{{ article.image.alt | default: article.title | escape }}"
              class="w-full rounded-lg object-cover"
              loading="lazy"
            >
          </div>
        {% endif %}

      {% when 'article_content' %}
        <div class="prose prose-lg max-w-none mt-8">
          {{ article.content }}
        </div>
    {% endcase %}
  {% endfor %}
</article>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
